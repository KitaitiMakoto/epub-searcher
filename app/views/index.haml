%div{:class => 'container'}

  %div{:class => 'page-header'}
    %h1 EPUB Searcher

  %form{:class => 'form-search centered', :action => '/', :method => 'GET'}
    %input{:type => 'text', :class => 'input-xxlarge search-query', :name => 'q'}
      %button{:class => 'btn'} Search

  %div{:class => 'row'}
    %div{:class => 'span2'}
    %div{:class => 'span8'}
      %ul{:class => 'media-list'}
        = partial 'result', :collection => @results if @results
    %div{:class => 'span2'}
